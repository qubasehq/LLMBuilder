{
  "model": {
    "vocab_size": 32000,
    "embedding_dim": 768,
    "num_layers": 12,
    "num_heads": 12,
    "hidden_dim": 3072,
    "max_seq_length": 1024,
    "dropout": 0.1,
    "use_bias": true,
    "tie_weights": true
  },
  "training": {
    "batch_size": 16,
    "gradient_accumulation_steps": 8,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "num_epochs": 10,
    "warmup_steps": 2000,
    "gradient_clip_norm": 1.0,
    "save_every": 1000,
    "eval_every": 500,
    "log_every": 10,
    "num_workers": 8,
    "pin_memory": true,
    "prefetch_factor": 4,
    "use_mixed_precision": true,
    "gradient_checkpointing": true
  },
  "tokenizer": {
    "vocab_size": 32000,
    "model_type": "bpe",
    "character_coverage": 0.9995,
    "input_sentence_size": 10000000,
    "shuffle_input_sentence": true,
    "normalization_rule_name": "nmt_nfkc_cf",
    "remove_extra_whitespaces": true,
    "add_dummy_prefix": true,
    "eos_id": 1,
    "unk_id": 0,
    "bos_id": 2,
    "pad_id": 3
  },
  "preprocessing": {
    "min_length": 10,
    "max_length": 10000,
    "remove_duplicates": true,
    "normalize_whitespace": true,
    "remove_empty_lines": true,
    "encoding": "utf-8",
    "chunk_size": 1000000,
    "supported_formats": ["txt", "pdf", "docx", "pptx", "md"]
  },
  "evaluation": {
    "batch_size": 8,
    "max_new_tokens": 200,
    "temperature": 0.7,
    "top_k": 50,
    "top_p": 0.9,
    "do_sample": true,
    "num_return_sequences": 3,
    "benchmark_iterations": 100,
    "perplexity_stride": 512
  },
  "logging": {
    "level": "INFO",
    "format": "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}",
    "rotation": "10 MB",
    "retention": "7 days",
    "compression": "gz",
    "colorize": true
  },
  "paths": {
    "data_dir": "data",
    "raw_data_dir": "data/raw",
    "cleaned_data_dir": "data/cleaned",
    "tokenized_data_dir": "data/tokens",
    "tokenizer_dir": "exports/tokenizer",
    "checkpoint_dir": "exports/checkpoints",
    "log_dir": "logs",
    "export_dir": "exports"
  },
  "device": {
    "use_cuda": true,
    "cuda_device": 0,
    "use_mps": false,
    "cpu_threads": 0,
    "enable_mkldnn": false,
    "mixed_precision": true
  },
  "optimization": {
    "optimizer": "adamw",
    "beta1": 0.9,
    "beta2": 0.999,
    "eps": 1e-8,
    "scheduler": "cosine",
    "min_lr": 1e-6,
    "warmup_ratio": 0.1,
    "gradient_clip_val": 1.0
  }
}
