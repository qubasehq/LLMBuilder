{
  "model": {
    "vocab_size": 8000,
    "embedding_dim": 256,
    "num_layers": 4,
    "num_heads": 4,
    "hidden_dim": 1024,
    "max_seq_length": 128,
    "dropout": 0.1,
    "use_bias": true,
    "tie_weights": true
  },
  "training": {
    "batch_size": 2,
    "learning_rate": 0.0003,
    "weight_decay": 0.01,
    "num_epochs": 3,
    "warmup_steps": 100,
    "gradient_clip_norm": 1.0,
    "save_every": 100,
    "eval_every": 50,
    "log_every": 5,
    "num_workers": 2,
    "pin_memory": false,
    "prefetch_factor": 1,
    "use_mixed_precision": false,
    "max_samples": 500
  },
  "tokenizer": {
    "vocab_size": 8000,
    "model_type": "bpe",
    "character_coverage": 0.9995,
    "input_sentence_size": 1000000,
    "shuffle_input_sentence": true,
    "normalization_rule_name": "nmt_nfkc_cf",
    "remove_extra_whitespaces": true,
    "add_dummy_prefix": true,
    "eos_id": 1,
    "unk_id": 0,
    "bos_id": 2,
    "pad_id": 3,
    "training": {
      "trainer_type": "huggingface",
      "preset": "small",
      "custom_config": {},
      "validation": {
        "enabled": true,
        "sample_texts": [
          "This is a test sentence.",
          "Small model validation."
        ]
      },
      "sentencepiece": {
        "enabled": false,
        "model_prefix": "tokenizer_small",
        "user_defined_symbols": [],
        "control_symbols": [],
        "byte_fallback": true
      }
    }
  },
  "preprocessing": {
    "min_length": 5,
    "max_length": 2048,
    "remove_duplicates": true,
    "normalize_whitespace": true,
    "remove_empty_lines": true,
    "encoding": "utf-8",
    "chunk_size": 100000,
    "supported_formats": ["txt", "md", "html"],
    "max_samples": 500
  },
  "ingestion": {
    "max_file_size_mb": 50,
    "batch_size": 5,
    "parallel_workers": 2,
    "skip_existing": true,
    "validate_output": true,
    "progress_reporting": true,
    "extractors": {
      "html": {
        "enabled": true,
        "remove_scripts": true,
        "remove_styles": true,
        "remove_navigation": true,
        "preserve_links": false,
        "min_text_length": 20
      },
      "epub": {
        "enabled": false,
        "extract_metadata": false,
        "preserve_chapters": false,
        "skip_images": true,
        "min_chapter_length": 50
      },
      "pdf": {
        "enabled": false,
        "use_ocr_fallback": false,
        "ocr_confidence_threshold": 60,
        "ocr_language": "eng",
        "extract_images": false,
        "preserve_layout": false
      },
      "markdown": {
        "enabled": true,
        "preserve_formatting": false,
        "extract_code_blocks": true,
        "preserve_tables": false,
        "remove_html_tags": true
      }
    }
  },
  "deduplication": {
    "enabled": true,
    "hash_deduplication": {
      "enabled": true,
      "normalize_whitespace": true,
      "normalize_case": true,
      "normalize_punctuation": true,
      "min_line_length": 5
    },
    "embedding_deduplication": {
      "enabled": false,
      "model_name": "all-MiniLM-L6-v2",
      "similarity_threshold": 0.9,
      "batch_size": 16,
      "max_documents": 1000,
      "cache_embeddings": false
    },
    "statistics": {
      "save_report": true,
      "detailed_logging": false,
      "progress_reporting": true
    }
  },
  "evaluation": {
    "batch_size": 1,
    "max_new_tokens": 50,
    "temperature": 0.7,
    "top_k": 20,
    "top_p": 0.9,
    "do_sample": true,
    "num_return_sequences": 1,
    "benchmark_iterations": 10,
    "perplexity_stride": 64
  },
  "logging": {
    "level": "INFO",
    "format": "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}",
    "rotation": "5 MB",
    "retention": "3 days",
    "compression": "gz",
    "colorize": true
  },
  "paths": {
    "data_dir": "data",
    "raw_data_dir": "data/raw",
    "cleaned_data_dir": "data/cleaned",
    "deduped_data_dir": "data/deduped",
    "tokenized_data_dir": "data/tokens",
    "finetune_data_dir": "data/finetune",
    "tokenizer_dir": "exports/tokenizer",
    "checkpoint_dir": "exports/checkpoints",
    "gguf_dir": "exports/gguf",
    "log_dir": "logs",
    "export_dir": "exports",
    "validation_dir": "validation_results",
    "monitoring_dir": "monitoring"
  },
  "export": {
    "gguf": {
      "enabled": true,
      "quantization_levels": ["f16", "q8_0"],
      "validate_output": false,
      "compression": true,
      "metadata": {
        "include_training_stats": true,
        "include_model_info": true,
        "custom_fields": {}
      }
    },
    "pytorch": {
      "enabled": true,
      "save_optimizer_state": false,
      "save_scheduler_state": false,
      "compress": true
    },
    "onnx": {
      "enabled": false,
      "opset_version": 14,
      "optimize": false,
      "dynamic_axes": false
    },
    "model_cards": {
      "enabled": true,
      "template": "templates/model_card_template.md",
      "auto_generate": true,
      "include_metrics": true
    }
  },
  "device": {
    "use_cuda": false,
    "cuda_device": 0,
    "use_mps": false,
    "cpu_threads": 2,
    "enable_mkldnn": true,
    "mixed_precision": false,
    "fallback_to_cpu": true,
    "auto_detect_device": false
  },
  "optimization": {
    "optimizer": "adamw",
    "beta1": 0.9,
    "beta2": 0.999,
    "eps": 1e-8,
    "scheduler": "linear",
    "min_lr": 1e-5,
    "warmup_ratio": 0.1,
    "gradient_clip_val": 1.0
  }
}
